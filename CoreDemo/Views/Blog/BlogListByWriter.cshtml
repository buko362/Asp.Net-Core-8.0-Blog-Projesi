@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<h1>Yazarın Blogları</h1>
<table class="table table-bordered">
    <tr>

        <th>#</th>
        <th>Blog Başlığı</th>
        <th>Oluşturma Tarihi</th>
        <th>Kategori</th>
        <th>Durum</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.BlogID</th>
            <td>@item.BlogTitle</td>
            <td> @item.BlogCreateDate?.ToString("dd-MMM-yyyy")</td>
            <td>@item.Category.CategoryName</td>
            <td>
                @if (item.BlogStatus == true)
                {
                    <span class="badge badge-success">Aktif</span>
                }
                else
                {
                    <span class="badge badge-danger">Pasif</span>
                }
            </td>
            <td><a href="/Blog/DeleteBlog/@item.BlogID" class="btn btn-danger sil-btn">Sil</a></td>
            <td><a href="/Blog/EditBlog/@item.BlogID" class="btn btn-warning">Düzenle</a></td>
        </tr>
    }
</table>

<a href="/Blog/BlogAdd/" class="btn btn-primary">Yeni Blog Oluştur</a>

<script>
        $('.sil-btn').click(function(e){
            e.preventDefault();//direkt gitmeyi önlüyor
            var link =$(this).attr("href");
            swal({
                title:"Dikkat!",
                text:"Bu blogu silmek istediğine emin misin?",
                buttons:["İptal","Sil"],
                dangerMode:true,
            }).then((willDelete)=>{
                if(willDelete){
    window.location.href=link;
                }
            });
        });
</script>
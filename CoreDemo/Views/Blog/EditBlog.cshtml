@model CoreDemo.Models.BlogUpdateViewModel
@{ 
    ViewData["Title"] = "EditBlog";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Blog Düzenleme Sayfası</h1>
@using(Html.BeginForm("EditBlog","Blog",FormMethod.Post,new{enctype="multipart/form-data"}))
{
    @Html.Label("Blog ID")
    @Html.TextBoxFor(x=>x.BlogId,new {@class="form-control",@readonly="readonly"})
    <br/>
    @Html.Label("Blog Başlığı")
    @Html.TextBoxFor(x => x.BlogTitle, new { @class = "form-control" })
    <br />
    <label>Mevcut Resim</label><br/>
    @if (!string.IsNullOrEmpty(Model.ExistingBlogImage))
    {
        <img src="@Model.ExistingBlogImage" style="width:100px; height:100px; border-radius:10%;"/>
    }
    else
    {
        <span>Resim Yok</span>
    }
    <br/>
    <br/>
    <input type="file" name="NewBlogImageFile" class="form-control" />
    <br />
    @Html.Label("Blog Kategori")
    @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.cv, new { @class = "form-control" })
    <br />
    @Html.Label("Blog İçeriği")
    @Html.TextAreaFor(x => x.BlogContent,10,3, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Güncelle</button>
}


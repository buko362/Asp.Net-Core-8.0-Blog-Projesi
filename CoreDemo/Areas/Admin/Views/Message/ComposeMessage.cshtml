@model EntityLayer.Concrete.Message2
@{
    ViewData["Title"] = "ComposeMessage";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <link href="~/inspinia-gh-pages/css/plugins/summernote/summernote-bs4.css" rel="stylesheet">
</head>
<body>
    <div class="wrapper wrapper-content">
        <div class="row">
            <div class="col-lg-3">
                <div class="ibox ">
                    <div class="ibox-content mailbox-content">
                        <div class="file-manager">
                            <a class="btn btn-block btn-primary compose-mail" href="mail_compose.html">Mesaj Kutusu</a>
                            <div class="space-25"></div>
                            <h5>Folders</h5>
                            <ul class="folder-list m-b-md" style="padding: 0">
                                <li><a href="/Admin/Message/InBox/"> <i class="fa fa-inbox "></i> Gelen Mesajlar </a></li>
                                <li><a href="/Admin/Message/SendBox/"> <i class="fa fa-envelope-o"></i> Giden Mesajlar</a></li>
                                <li><a href="mailbox.html"> <i class="fa fa-certificate"></i> Önemli Mesajlar</a></li>
                                <li><a href="mailbox.html"> <i class="fa fa-trash-o"></i> Çöp Kutusu</a></li>
                            </ul>
                            <h5>Kategoriler</h5>
                            <ul class="category-list" style="padding: 0">
                                <li><a href="#"> <i class="fa fa-circle text-navy"></i> İş </a></li>
                                <li><a href="#"> <i class="fa fa-circle text-danger"></i> Dokümanlar</a></li>
                                <li><a href="#"> <i class="fa fa-circle text-primary"></i> Sosyal</a></li>
                                <li><a href="#"> <i class="fa fa-circle text-info"></i> Tanıtımlar</a></li>
                                <li><a href="#"> <i class="fa fa-circle text-warning"></i> Talepler</a></li>
                            </ul>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-9 animated fadeInRight">
                <div class="mail-box-header">
                    <div class="float-right tooltip-demo">
                        <a href="mailbox.html" class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="Move to draft folder">
                            <i class="fa fa-pencil"></i> Taslak
                            <a href="mailbox.html" class="btn btn-danger btn-sm" data-toggle="tooltip" data-placement="top" title="Discard email"><i class="fa fa-times"></i> İptal Et</a>
                    </div>
                    <h2>
                        Yeni Mesaj Oluştur
                    </h2>
                </div>
                <div class="mail-box">


                    <div class="mail-body">

                        <form method="post" asp-action="ComposeMessage">
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">
                                    Alıcı:

                                </label>

                                <div class="col-sm-10">
                                    @Html.DropDownListFor(x => x.ReceiverID, (SelectList)ViewBag.receiver, "Alıcı Seç", new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Konu:</label>
                               
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(x => x.Subject, new{@class="form-control", Value=ViewBag.DefaultSubject } )
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Mesajınız:</label>
                                @Html.TextAreaFor(x=>x.MessageDetails,new {@class="form-control", rows="6",id="MessageDetails"})
                            </div>

                            @if (ViewBag.DefaultDetails != null)
                            {
                                <script>
                                    document.addEventListener("DOMContentLoaded",function(){
                                        var ta=document.getElementById("MessageDetails");
                                        if(ta && !ta.value) ta.value=@Html.Raw(System.Text.Json.JsonSerializer.Serialize((string)ViewBag.DefaultDetails));
                                    });
                                </script>
                            }


                            <div class="clearfix"></div>

                            <div class="mail-body text-right tooltip-demo">
                                @*<a href="/Admin/Message/SendBox/"  class="btn btn-sm btn-primary" data-toggle="tooltip" data-placement="top" title="Gönder"><i class="fa fa-reply"></i> Gönder</a> *@
                                <button type="submit" class="btn btn-primary ">
                                    <i class="fa fa-reply"></i> Gönder
                                    </button>
                                <a href="/Admin/Message/InBox/" class="btn btn-white btn sm" data-toggle="tooltip" data-placement="top" title="Vazgeç"><i class="fa fa-times"></i> Vazgeç</a>
                                <a href="#" class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="Taslağa taşı"><i class="fa fa-pencil"></i> Taslak</a>
                            </div>
                        </form>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
    <!-- SUMMERNOTE -->
    <script src="~/inspinia-gh-pages/js/plugins/summernote/summernote-bs4.js"></script>

    <script>
        $(document).ready(function(){

            $('.summernote').summernote();

        });

    </script>
</body>

</html>

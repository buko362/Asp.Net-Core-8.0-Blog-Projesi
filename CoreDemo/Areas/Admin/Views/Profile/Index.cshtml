@model CoreDemo.Models.UserUpdateViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";

    var title = User.IsInRole("Admin") ? "Admin Profil Bilgileri" : User.IsInRole("Moderator") ? "Moderatör Profil Bilgileri" : "Profil Bilgileri";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">@title</h4>
                
               
            <br />
            <form class="forms-sample" method="post" enctype="multipart/form-data">

                <div class="form-group">
                    <label for="exampleInputEmail3">Mevcut Resim</label><br/>
                    @if (!string.IsNullOrEmpty(Model.imageurl))
                    {
                        <img src="@Model.imageurl" style="height:100px; width:100px; border-radius:10%;" />
                    }
                </div>

                <div class="form-group">
                    <label for="exampleInputEmail3">Yeni Resim Yükle</label>
                    <input type="file" asp-for="@Model.imagefile" class="form-control" />
                </div>

                <div class="form-group">
                    <label for="exampleInputName1">Yazar Ad Soyad</label>
                    <input type="text" asp-for="@Model.namesurname" class="form-control" />

                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Kullanıcı Adı</label>
                    <input type="text" asp-for="@Model.username" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Email adresi</label>
                    <input type="text" asp-for="@Model.mail" class="form-control" />
                </div>
                
                <div class="form-check">
                    <input type="checkbox" id="flexCheckChecked" asp-for="@Model.ChangePassword" />
                    <label for="flexCheckChecked">Şifremi değiştirmek istiyorum</label>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Yeni Şifre</label>
                    <input type="text" asp-for="@Model.password" class="form-control" />
                </div>

               

                <button type="submit" class="btn btn-gradient-primary mr-2">Güncelle</button>
                <button class="btn btn-light" asp-action="Index" asp-controller="Widgets">Vazgeç</button>
            </form>
        </div>
    </div>
</div>
@using EntityLayer.Concrete
@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<h1>Kategoriler</h1>
<br/>
<table class="table table-bordered">
<tr>
    <th>#</th>
    <th>Kategori Adı</th>
    <th>Sil</th>

</tr>
@foreach(var item in Model)
{
    <tr>
        <th>@item.CategoryID</th>
        <td>@item.CategoryName</td>
        <td><a href="/Admin/Category/DeleteCategory/@item.CategoryID"  class="btn btn-danger deleteBtn">Sil</a></td>
     
    </tr>
}
</table>

<a href="/Admin/Category/AddCategory/" class="btn btn-outline-warning">Yeni Kategori Ekle</a>

<br />
<br />
@Html.PagedListPager((IPagedList)Model,page=>Url.Action("Index",new {page}))  
<!--controller tarafında tanımladığımız isim => her defasında indexe gideceksin page parametresiyle beraber -->

<script>
    $('.deleteBtn').click(function(e){
        e.preventDefault();
        var link=$(this).attr("href");
        swal({
            title:"Dikkat!",
            text:"Bu kategoriyi silmek istediğine emin misin?",
            buttons:["İptal","Sil"],
            dangerMode:true,
        }).then((willDelete)=>{
            if(willDelete)
            {
                window.location.href=link;
            }
        });
    });
</script>
